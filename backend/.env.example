# Environment Variables

# MongoDB
MONGODB_URI=

# JWT Secret
JWT_SECRET=

# Node Environment
NODE_ENV=development

# Server Port
PORT=5001

# Frontend URL (for OAuth redirects)
FRONTEND_URL=http://localhost:8080

# Google OAuth Configuration
GOOGLE_CLIENT_ID=-
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:5001/api/google/callback

# Google Token Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
GOOGLE_TOKEN_ENCRYPTION_KEY=

# GitHub OAuth Configuration
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GITHUB_REDIRECT_URI=http://localhost:5001/api/github/callback

# GitHub Token Encryption (generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
GITHUB_TOKEN_ENCRYPTION_KEY=

# GitHub API Token (optional - for higher rate limits)
GITHUB_TOKEN=

# Groq AI API Key (for resume analysis)
GROQ_API_KEY=

# Demo Data Seeding
SEED_DEMO_DATA=false
